    <tr>
      <th scope="row"><%= post.id%></th>
      <td><%= "#{post.overtime_request} hr"%></td>
      <td><%= truncate(post.rationale)%></td>
      <td><%= post.date%></td>
      <td><%= post.user.full_name%></td>
      <td><%= status_label post.status %></td>
      <td>
        <%= link_to '', edit_post_path(post), id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil' if policy(post).update? %>
      </td>
      <td>
        <%= link_to '', post_path(post), method: :delete, data: {confirm: 'Are you sure?'}, id: "delete_post_#{post.id}_from_index", class: 'glyphicon glyphicon-trash' %>
      </td>
    </tr>