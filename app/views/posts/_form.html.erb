<%= form_for @post, class: 'col-md-6' do |f| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_message.each do |error| %>
      <%= js add_gritter(error, title: "Overtime App", sticky: false) %>
    <% end %>
  <% end %>
  <div class="form-group row">
    <%= f.label :overtime_request, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :overtime_request, class: "form-control", placeholder: "Overtime hours" %>
  </div>
  <div class="form-group row">
    <%= f.label :date, class: "col-sm-2 col-form-label" %>
    <%= f.date_field :date, class: "form-control", placeholder: "Date" %>
  </div>
  <div class="form-group row">
    <%= f.label :rationale, class: "col-sm-2 col-form-label" %>
    <%= f.text_area :rationale, class: "form-control", placeholder: "Enter rationale" %>
  </div>

  <%= render partial: 'status', locals: {f: f} if current_user.type == 'AdminUser' %>

  <div class="form-group row">
    <%= f.submit "Save", class: "btn btn-primary btn-block" %>
  </div>
<% end %>